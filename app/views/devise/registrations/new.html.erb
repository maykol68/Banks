<div class="justify-between items-center px-2">
  <h1 class="text-2xl">Sign up</h1>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %><br /><br />
    </div>

    <div class="actions">
      <button class="flex pt-2 text-center bg-sky-400 rounded-lg border-gray-400 border-2" ><%= f.submit "Sign up" %></button>
    </div>
  <% end %>
</div>

