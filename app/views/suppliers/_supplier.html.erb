<div id="<%= dom_id supplier %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= supplier.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Nit:</strong>
    <%= supplier.nit %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Name person contact:</strong>
    <%= supplier.name_person_contact %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Phone number person contact:</strong>
    <%= supplier.phone_number_person_contact %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this supplier", supplier, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this supplier', edit_supplier_path(supplier), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
